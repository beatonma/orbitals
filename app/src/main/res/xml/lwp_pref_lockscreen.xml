<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:list="http://schemas.android.com/apk/res-auto"
    android:summary="@string/pref_lockscreen_title_summ"
    android:title="@string/pref_lockscreen_title" >
    <PreferenceCategory android:title="@string/pref_color_title" >
        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:defaultValue="0"
            android:key="pref_lockscreen_color_background"
            android:summary="@string/pref_lockscreen_color_background_summ"
            android:title="@string/pref_lockscreen_color_background" />

        <com.beatonma.orbitalslivewallpaper.MultiSelectListPreference
            list:entries="@array/pref_color_color_entries"
            list:entryValues="@array/pref_color_color_entryvalues"
            android:key="pref_lockscreen_color_objectcolors"
            android:summary="@string/pref_lockscreen_color_colortheme_summ"
            android:title="@string/pref_lockscreen_color_colortheme" />

        <com.beatonma.orbitalslivewallpaper.NiceNumberDialogPreference
            android:key="pref_lockscreen_alpha"
            android:summary="@string/pref_lockscreen_alpha_summ"
            android:title="@string/pref_lockscreen_alpha" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_lockscreen_dark"
            android:summary="@string/pref_lockscreen_dark_summ"
            android:title="@string/pref_lockscreen_dark" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_lockscreen_desaturate"
            android:summary="@string/pref_lockscreen_desaturate_summ"
            android:title="@string/pref_lockscreen_desaturate" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_appearance_shapes_title" >
        <com.beatonma.orbitalslivewallpaper.ListPreference
            list:defaultValue="1.0"
            list:entries="@array/pref_render_size_entries"
            list:entryValues="@array/pref_render_size_entryvalues"
            android:key="pref_lockscreen_size"
            android:summary="@string/pref_lockscreen_size_summ"
            android:title="@string/pref_lockscreen_size" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_lockscreen_wireframe"
            android:summary="@string/pref_lockscreen_wireframe_summ"
            android:title="@string/pref_lockscreen_wireframe" />

        <com.beatonma.orbitalslivewallpaper.NiceNumberDialogPreference
            android:key="pref_lockscreen_wireframewidth"
            android:summary="@string/pref_lockscreen_wireframewidth_summ"
            android:title="@string/pref_lockscreen_wireframewidth" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_outlines_title">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="pref_lockscreen_outlines"
            android:summary="@string/pref_lockscreen_outlines_summ"
            android:title="@string/pref_lockscreen_outlines" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="pref_outlines_custom_color"
            android:summary="@string/pref_lockscreen_outlines_custom_color_summ"
            android:title="@string/pref_lockscreen_outlines_custom_color" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:defaultValue="0"
            android:key="pref_color_outline"
            android:summary="@string/pref_lockscreen_outlines_color_summ"
            android:title="@string/pref_lockscreen_outlines_color" />
    </PreferenceCategory>
</PreferenceScreen>