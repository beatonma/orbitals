<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" >

    <PreferenceCategory android:title="@string/pref_title" >
        <PreferenceScreen
            android:summary="@string/pref_appearance_title_summ"
            android:title="@string/pref_appearance_title" >
            <PreferenceCategory android:title="@string/pref_color_title" >
                <net.margaritov.preference.colorpicker.ColorPickerPreference
                    android:defaultValue="0"
                    android:key="pref_color_background"
                    android:summary="@string/pref_color_background_summ"
                    android:title="@string/pref_color_background" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref_color_batterylevel"
                    android:summary="@string/pref_color_batterylevel_summ"
                    android:title="@string/pref_color_batterylevel" />

                <PreferenceScreen
                    android:dependency="pref_color_batterylevel"
                    android:summary="@string/pref_color_batterylevel_level_summ"
                    android:title="@string/pref_color_batterylevel_level"
                    android:key="pref_color_batterylevel_screen" >
                    <PreferenceCategory android:title="@string/pref_color_batterylevel" >
                        <MultiSelectListPreference
                            android:defaultValue="@array/empty_array"
                            android:entries="@array/pref_color_color_entries"
                            android:entryValues="@array/pref_color_color_entryvalues"
                            android:key="pref_color_battery_high"
                            android:title="@string/pref_color_battery_high" />
                        <MultiSelectListPreference
                            android:defaultValue="@array/empty_array"
                            android:entries="@array/pref_color_color_entries"
                            android:entryValues="@array/pref_color_color_entryvalues"
                            android:key="pref_color_battery_medhigh"
                            android:title="@string/pref_color_battery_medhigh" />
                        <MultiSelectListPreference
                            android:defaultValue="@array/empty_array"
                            android:entries="@array/pref_color_color_entries"
                            android:entryValues="@array/pref_color_color_entryvalues"
                            android:key="pref_color_battery_medlow"
                            android:title="@string/pref_color_battery_medlow" />
                        <MultiSelectListPreference
                            android:defaultValue="@array/empty_array"
                            android:entries="@array/pref_color_color_entries"
                            android:entryValues="@array/pref_color_color_entryvalues"
                            android:key="pref_color_battery_low"
                            android:title="@string/pref_color_battery_low" />
                    </PreferenceCategory>
                </PreferenceScreen>

                <MultiSelectListPreference
                    android:defaultValue="@array/empty_array"
                    android:entries="@array/pref_color_color_entries"
                    android:entryValues="@array/pref_color_color_entryvalues"
                    android:key="pref_color_objectcolors"
                    android:summary="@string/pref_color_colortheme_summ"
                    android:title="@string/pref_color_colortheme" />

                <com.beatonma.orbitalslivewallpaper.NumberDialogPreference
                    android:key="pref_color_alpha"
                    android:summary="@string/pref_color_alpha_summ"
                    android:title="@string/pref_color_alpha" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref_color_dark"
                    android:summary="@string/pref_color_dark_summ"
                    android:title="@string/pref_color_dark" />
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref_color_desaturate"
                    android:summary="@string/pref_color_desaturate_summ"
                    android:title="@string/pref_color_desaturate" />
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/pref_appearance_shapes_title" >
                <ListPreference
                    android:defaultValue="1.0"
                    android:entries="@array/pref_render_size_entries"
                    android:entryValues="@array/pref_render_size_entryvalues"
                    android:key="pref_render_size"
                    android:summary="@string/pref_render_size_summ"
                    android:title="@string/pref_render_size" />

                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref_render_wireframe"
                    android:summary="@string/pref_render_wireframe_summ"
                    android:title="@string/pref_render_wireframe" />
                <!--
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref_render_outlines"
                    android:summary="@string/pref_render_outlines_summ"
                    android:title="@string/pref_render_outlines" /> -->

                <com.beatonma.orbitalslivewallpaper.NumberDialogPreference
                    android:key="pref_render_wireframewidth"
                    android:summary="@string/pref_render_wireframewidth_summ"
                    android:title="@string/pref_render_wireframewidth" />
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/pref_outlines_title">
                <CheckBoxPreference
                    android:defaultValue="true"
                    android:key="pref_render_outlines"
                    android:summary="@string/pref_render_outlines_summ"
                    android:title="@string/pref_render_outlines" />
                
                <CheckBoxPreference
                    android:defaultValue="false"
                    android:key="pref_outlines_custom_color"
                    android:summary="@string/pref_outlines_custom_color_summ"
                    android:title="@string/pref_outlines_custom_color" />
                
                <net.margaritov.preference.colorpicker.ColorPickerPreference
                    android:defaultValue="0"
                    android:key="pref_color_outline"
                    android:summary="@string/pref_color_outline_summ"
                    android:title="@string/pref_color_outline" />
            </PreferenceCategory>
        </PreferenceScreen>
        <PreferenceScreen
            android:summary="@string/pref_lockscreen_title_summ"
            android:title="@string/pref_lockscreen_title" >
            <PreferenceCategory android:title="@string/pref_color_title" >
                <net.margaritov.preference.colorpicker.ColorPickerPreference
