                android:key="pref_render_dialog_trace_length"
                android:summary="@string/pref_render_dialog_trace_length_summ"
                android:title="@string/pref_render_dialog_trace_length" />
        </PreferenceScreen>
        <PreferenceScreen
            android:summary="@string/pref_systems_title_summ"
            android:title="@string/pref_systems_title" >
            <CheckBoxPreference
                android:defaultValue="true"
