<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--<style name="AppBaseTheme" parent="android:Theme.Light">
        &lt;!&ndash;
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        &ndash;&gt;
    </style>-->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/Primary</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDark</item>"
        <item name="android:colorAccent">@color/Accent</item>
        <item name="android:textColorPrimary">@color/TextPrimary</item>
        <item name="android:textColorSecondary">@color/TextSecondary</item>
        <item name="android:statusBarColor">@color/PrimaryDark</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="HoloLegacy" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/Primary</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDark</item>"
        <item name="android:colorAccent">@color/Accent</item>
        <item name="android:textColorPrimary">@color/TextPrimary</item>
        <item name="android:textColorSecondary">@color/TextSecondary</item>
        <item name="android:statusBarColor">@color/PrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="@style/AppTheme">
        <item name="android:textColor">@color/Primary</item>
    </style>

    <style name="SettingsTheme" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/Accent</item>
        <item name="android:colorControlNormal">@color/Primary</item>
        <item name="android:colorControlHighlight">@color/Accent</item>
        <item name="android:colorControlActivated">@color/Accent</item>
    </style>

    <style name="CropActivityTheme" parent="@style/AppTheme">

    </style>

    <!-- Number Picker -->
	<style name="NPWidget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@color/Accent</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">180dip</item>
        <item name="virtualButtonPressedDrawable">?attr/selectableItemBackground</item>
    </style>
	<!-- End number picker -->

    <color name="Black">#000000</color>
    <color name="White">#FFFFFF</color>

    <color name="PrimaryGrey">#616161</color>
    <color name="PrimaryGreyDark">#424242</color>
    <color name="LightGrey">#bdbdbd</color>
    <color name="AccentGrey">#9e9e9e</color>

    <color name="PrimaryBlueGrey">#607d8b</color>
    <color name="PrimaryBlueGreyDark">#455a64</color>
    <color name="LightBlueGrey">#78909c</color>

    <color name="PrimaryGreenGrey">#586a6a</color>
    <color name="PrimaryGreenGreyDark">#253737</color>
    <color name="LightGreenGrey">#8B9D9D</color>

    <color name="PrimaryPurple">#4b394b</color>
    <color name="PrimaryPurpleDark">#180618</color>
    <color name="LightPurple">#7E6C7E</color>
    <color name="VeryLightPurple">#988698</color>

    <color name="AccentOrange">#ff5722</color>
    <color name="AccentPink">#e91e63</color>
    <color name="AccentGreen">#009688</color>

    <color name="OffWhite">#eeeeee</color>

    <!-- Grey and pink -->
    <color name="Primary">@color/PrimaryGrey</color>
    <color name="PrimaryDark">@color/PrimaryGreyDark</color>
    <color name="Light">@color/LightGrey</color>
    <color name="Accent">@color/AccentPink</color>
    <color name="VeryLight">@color/LightGrey</color>

    <color name="TextPrimary">#000000</color>
    <color name="TextSecondary">#222222</color>

    <color name="fab_primary">@color/Accent</color>
    <color name="fab_primary_pressed">@color/Primary</color>
    <color name="fab_ripple">@color/Light</color>

    <color name="transparent">#00000000</color>
    <color name="dialog">#f5f5f5</color>
    <color name="preview_overlay">#22eeeeee</color>
    <color name="CardRipple">#21000000</color>
</resources>