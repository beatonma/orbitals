<resources>

    <!--
        JellyBeanMR1 4.2
    -->

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/Primary</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDark</item>"
        <item name="android:colorAccent">@color/Accent</item>
        <item name="android:textColorPrimary">@color/TextPrimary</item>
        <item name="android:textColorSecondary">@color/TextSecondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="android:colorControlNormal">@color/White</item>
        <item name="android:colorControlHighlight">@color/Accent</item>
        <item name="android:colorControlActivated">@color/Accent</item>
        <item name="numberPickerStyle">@style/NPWidget.NumberPicker</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DialogTheme" parent="@style/AppTheme">
        <item name="android:textColor">@color/Primary</item>
    </style>

    <style name="SettingsTheme" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/Primary</item>
        <item name="colorControlActivated">@color/Accent</item>
        <item name="colorControlHighlight">@color/Accent</item>
        <item name="android:colorControlNormal">@color/Primary</item>
        <item name="android:colorControlHighlight">@color/Accent</item>
        <item name="android:colorControlActivated">@color/Accent</item>
    </style>

    <!-- Number Picker -->
    <style name="NPWidget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="NPWidget.NumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dip</item>
        <item name="solidColor">@android:color/transparent</item>
        <item name="selectionDivider">@color/Accent</item>
        <item name="selectionDividerHeight">2dip</item>
        <item name="internalLayout">@layout/number_picker_with_selector_wheel</item>
        <item name="internalMinWidth">64dip</item>
        <item name="internalMaxHeight">180dip</item>
        <item name="virtualButtonPressedDrawable">?attr/selectableItemBackground</item>
    </style>
    <!-- End number picker -->

    <color name="Primary">@color/PrimaryGreenGrey</color>
    <color name="PrimaryDark">@color/PrimaryGreenGreyDark</color>
    <color name="Light">@color/LightGreenGrey</color>
    <color name="Accent">@color/AccentGreen</color>
</resources>