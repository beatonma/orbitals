<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.beatonma.orbitalslivewallpaper"
    android:versionCode="31"
    android:versionName="1.4.7" >

    <uses-permission android:name="android.permission.BIND_DREAM_SERVICE"/>

    <uses-feature
        android:name="android.software.live_wallpaper"
        android:required="true" >
    </uses-feature>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".livewallpaper.LwpService"
            android:enabled="true"
            android:label="@string/service_title"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" >
                </action>
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>

        <activity
            android:name=".livewallpaper.LwpPrefsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:exported="true"
            android:label="@string/wallpaper_settings" >
        </activity>

        <service
            android:name="com.beatonma.orbitalslivewallpaper.IntentFilter"
            android:label="OrbitalsIntentFilter"
            android:enabled="true"
            android:exported="true">
        </service>

        <!-- Dream service -->
        <service
            android:name=".dream.DayDreamService"
            android:exported="false"
            android:icon="@drawable/ic_launcher"
            android:label="@string/service_title"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/dream" />
        </service>

        <activity
            android:name=".dream.DreamPrefsActivity"
            android:label="@string/dream_settings" />
        <activity
            android:name=".DreamPassthroughActivity" />
        <activity
            android:name="com.soundcloud.android.crop.CropImageActivity"
            android:theme="@style/CropActivityTheme"/>

        <activity android:name="LauncherNav" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>